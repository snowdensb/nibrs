<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.search.nibrs</groupId>
	<artifactId>nibrs-aggregate</artifactId>
	<version>1.0.0</version>
	<packaging>pom</packaging>

    <name>${project.groupId}:${project.artifactId}</name>
	<description>Common build module for NIBRS toolkit</description>
	<url>http://www.search.org/</url>

	<licenses>
		<license>
			<name>Apache 2.0</name>
			<url>https://www.apache.org/licenses/LICENSE-2.0</url>
		</license>
	</licenses>

	<developers>
		<developer>
			<name>SEARCH</name>
			<email>info@search.org</email>
			<organization>SEARCH</organization>
			<organizationUrl>http://www.search.org/</organizationUrl>
		</developer>
	</developers>

	<scm>
		<connection>https://github.com/SEARCH-NCJIS/nibrs</connection>
		<developerConnection>https://github.com/SEARCH-NCJIS/nibrs.git</developerConnection>
		<url>https://github.com/SEARCH-NCJIS/nibrs</url>
	</scm>

	<modules>
		<module>shared</module>
		<module>tools</module>
		<module>web</module>
	</modules>

	<distributionManagement>
		<snapshotRepository>
			<id>ossrh</id>
			<url>https://oss.sonatype.org/content/repositories/snapshots</url>
		</snapshotRepository>
		<repository>
			<id>ossrh</id>
			<url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
		</repository>
	</distributionManagement>


	<build>
		<plugins>

			<plugin>
				<groupId>org.sonatype.plugins</groupId>
				<artifactId>nexus-staging-maven-plugin</artifactId>
				<version>1.6.3</version>
				<extensions>true</extensions>
				<configuration>
					<serverId>ossrh</serverId>
					<nexusUrl>https://oss.sonatype.org/</nexusUrl>
					<autoReleaseAfterClose>true</autoReleaseAfterClose>
				</configuration>
			</plugin>


			<!-- Note, if updating license plugin config here, Ensure the second duplicate
				declaration is updated also in nibrs-build-common project (Plugin declared twice
				to avoid cyclic dependency) -->
			<plugin>
				<groupId>com.mycila</groupId>
				<artifactId>license-maven-plugin</artifactId>
				<version>3.0</version>

				<!-- Reference jar with license txt file on classpath -->
				<dependencies>
					<dependency>
						<groupId>org.search.nibrs</groupId>
						<artifactId>nibrs-build-common</artifactId>
						<version>1.0.0</version>
					</dependency>
				</dependencies>

				<configuration>
					<!-- Reference license on plugin classpath -->
					<header>license-search.txt</header>
					<validHeaders>
						<validHeader>license-research-triangle-institute.txt</validHeader>
                        <validHeader>license-mark43.txt</validHeader>
					</validHeaders>
					<aggregate>true</aggregate>

					<excludes>
						<exclude>**/jquery-datatable/**</exclude>
						<exclude>**/jquery-ui/**</exclude>
						<exclude>**/jquery.maskinput.js</exclude>
						<exclude>**/bin/**</exclude>
						<exclude>**/docs/**</exclude>
            <exclude>**/docker/**</exclude>
            <exclude>**/NIBRS_IEPD_4_2_RC2_FINAL_20171214/**</exclude>
						<exclude>**/analytics/R/nibrs-xml/**</exclude>
						<exclude>**/analytics/**</exclude>
					</excludes>
					<includes>
						<include>**/*.java</include>
						<include>**/*.xml</include>
						<include>**/*.xslt</include>
						<include>**/*.xsd</include>
						<include>**/*.wsdl</include>
						<include>**/*.xsl</include>
						<include>**/*.xslt</include>
						<include>**/*.vm</include>
						<include>**/*.html</include>
						<include>**/*.js</include>
						<include>**/*.sql</include>
					</includes>
					<mapping>
						<java>SLASHSTAR_STYLE</java>
						<wsdl>XML_STYLE</wsdl>
						<xslt>XML_STYLE</xslt>
						<sql>SLASHSTAR_STYLE</sql>
					</mapping>
				</configuration>
				<executions>
					<execution>
						<!-- bind check goal to run on its default phase(validate) -->
						<goals>
							<goal>check</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>


	<profiles>

		<profile>
			<id>release</id>
			<build>
				<plugins>

					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-source-plugin</artifactId>
						<version>2.3</version>
						<executions>
							<execution>
								<id>attach-sources</id>
								<goals>
									<goal>jar-no-fork</goal>
								</goals>
							</execution>
						</executions>
					</plugin>


					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-javadoc-plugin</artifactId>
						<version>2.9.1</version>
						<configuration>
							<failOnError>false</failOnError>
							<quiet>true</quiet>
						</configuration>
						<executions>
							<execution>
								<id>attach-javadoc</id>
								<goals>
									<goal>jar</goal>
								</goals>
							</execution>
						</executions>
					</plugin>


					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-jar-plugin</artifactId>

						<dependencies>
							<!-- Reference jar with javadoc dir TODO: get working so readme included -->
							<dependency>
								<groupId>org.search.nibrs</groupId>
								<artifactId>nibrs-build-common</artifactId>
								<version>1.0.0</version>
							</dependency>
						</dependencies>

						<executions>
							<execution>
								<id>empty-javadoc-jar</id>
								<phase>package</phase>
								<goals>
									<goal>jar</goal>
								</goals>
								<configuration>
									<classifier>javadoc</classifier>
									<classesDirectory>javadoc</classesDirectory>
								</configuration>
							</execution>
						</executions>
					</plugin>


				    <plugin>
				      <groupId>org.apache.maven.plugins</groupId>
				      <artifactId>maven-gpg-plugin</artifactId>
				      <version>1.6</version>
				      <executions>
				        <execution>
				          <id>sign-artifacts</id>
				          <phase>verify</phase>
				          <goals>
				            <goal>sign</goal>
				          </goals>
				        </execution>
				      </executions>
				    </plugin>


				</plugins>
			</build>
		</profile>
	</profiles>


</project>
